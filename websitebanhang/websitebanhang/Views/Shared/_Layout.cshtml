    <script>
        document.getElementById("increaseBtn").addEventListener("click", function () {
            var quantityInput = document.getElementById("ipQuantity");
            var currentQuantity = parseInt(quantityInput.value);
            if (isNaN(currentQuantity) || currentQuantity < 0) {
                currentQuantity = 0;
            }
            quantityInput.value = currentQuantity + 1;
        });

        document.getElementById("decreaseBtn").addEventListener("click", function () {
            var quantityInput = document.getElementById("ipQuantity");
            var currentQuantity = parseInt(quantityInput.value);
            if (isNaN(currentQuantity) || currentQuantity <= 0) {
                currentQuantity = 0;
            } else {
                quantityInput.value = currentQuantity - 1;
            }
        });

        document.getElementById("addtocart").addEventListener("click", function () {
            var quantityInput = document.getElementById("ipQuantity");
            var currentQuantity = parseInt(quantityInput.value);
            if (isNaN(currentQuantity) || currentQuantity <= 0) {
                return;
            }

            var cartCountElement = document.getElementById("CartCount");
            var cartCount = parseInt(cartCountElement.innerText);
            if (isNaN(cartCount)) {
                cartCount = 0;
            }
            cartCount += currentQuantity;

            var cartItemsElement = document.getElementById("CartItems");
            var cartItems = parseInt(cartItemsElement.innerText);
            if (isNaN(cartItems)) {
                cartItems = 0;
            }
            cartItems += 1;

            cartCountElement.innerText = cartCount.toString() + " sản phẩm";
            cartItemsElement.innerText = cartItems.toString();

            // Lưu số lượng sản phẩm vào session (nếu sử dụng session trong ASP.NET)
            // Ví dụ: Session["count"] = cartCount;
        });
    </script>







