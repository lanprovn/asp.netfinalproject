<div class="site-section">
    <div class="container">
        <div class="row mb-5 justify-content-center text-center">
            <div class="col-lg-6 mb-5">
                <a href="@Url.Action("DienThoai", "Products")">
                    <h2 class="section-title-underline mb-3">
                        <span>ĐIỆN THOẠI NỔI BẬT NHẤT</span>
                    </h2>
                </a>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="owl-slide-3 owl-carousel">
                    @foreach (var item in Model.ListProduct.Where(p => p.CategoryId == 1).Take(6))
                    {
                        <div class="course-1-item">
                            <figure class="thumbnail">
                                <a href="@Url.Action("Detail","Products",new {Id=item.Id })"><img src="~/Content/images/@item.Avatar" alt="Image" class="img-fluid"></a>
                                <div class="category"><p>@item.Name</p></div>
                                @*<div class="price">@item.BrandId</div>*@
                            </figure>
                            <div class="course-1-content pb-4">
                                <h2>@item.Name</h2>
                                <p class="desc mb-4">@item.Price</p>
                                <p><a href="@Url.Action("Detail","Products",new {Id=item.Id })" class="btn btn-primary rounded-0 px-4">Xem chi tiết</a></p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>



