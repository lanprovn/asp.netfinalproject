@model websiteBanHang.Models.ProductCategoryModel﻿
@{
    ViewBag.Title = "Index";
}


<div class="site-section ftco-subscribe-1 site-blocks-cover pb-4" style="background-image: url('~/Content/images/bg_1.jpg')">
    <div class="container">
        <div class="row align-items-end">
            <div class="col-lg-12 text-lg-center">
                <h2 class="mb-0">Danh mục tất cả sản phẩm</h2>
                <p>Điện thoại, Laptop, Máy tính bảng, Phụ kiện....v.v</p>
            </div>
        </div>
    </div>
</div>



@*DANH MỤC ĐIỆN THOẠI*@
<div class="site-section" id="dien-thoai">
    <div class="container">
        <a href="@Url.Action("DienThoai", "Products")"><h1 class="text-center">Điện thoại</h1></a>
        <div class="row">
            @foreach (var item in Model.ListProduct.Where(p => p.CategoryId == 1).Take(6))
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="course-1-item">
                        <figure class="thumnail">
                            <a href="@Url.Action("Detail","Products",new {Id=item.Id })">
                                <img src="~/Content/images/@item.Avatar" alt="Image" class="img-fluid">
                            </a>
                            <div class="price">@item.Price</div>
                            <div class="category"><h3>@item.Name</h3></div>
                        </figure>
                        <div class="course-1-content pb-4">
                            <h2>@item.ShortDes</h2>
                            <p class="desc mb-4">@item.FullDescription</p>
                            <p><a href="@Url.Action("Detail","Products",new {Id=item.Id })" class="btn btn-primary rounded-0 px-4">Chi tiết sản phẩm</a></p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>



